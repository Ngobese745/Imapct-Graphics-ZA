<?xml version="1.0" encoding="utf-8"?>
<!-- Professional splash screen with gradient and logo -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient Background - Professional dark red gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#8B0000"
                android:centerColor="#6B0000"
                android:endColor="#4B0000" />
        </shape>
    </item>

    <!-- Subtle overlay for depth -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="60%p"
                android:centerX="0.5"
                android:centerY="0.4"
                android:startColor="#1AFFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>

    <!-- App Logo - Centered with optimal size -->
    <item android:gravity="center">
        <bitmap
            android:gravity="center"
            android:src="@mipmap/ic_launcher" />
    </item>

    <!-- Brand Name Text Area (positioned below logo) -->
    <item 
        android:gravity="center|bottom"
        android:bottom="120dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <size 
                android:width="300dp"
                android:height="60dp" />
        </shape>
    </item>
</layer-list>
